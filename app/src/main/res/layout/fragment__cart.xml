<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBFF"
    tools:context=".Fragment.Fragment_Cart">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cartFragment_rcv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:weightSum="10"
            android:background="#BCFAF4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="120000vnd"
                android:layout_weight="5"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:gravity="center"
                android:id="@+id/cartFramgent_price"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:backgroundTint="@color/orange"
                android:text="Đặt dịch vụ"
                android:textSize="20sp"
                android:id="@+id/cartFragment_book"/>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>